<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruTua"
    tools:context=".VerificationEmail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ForgotPassword">

        <TextView
            android:id="@+id/textForgotPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Email "
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/background"
            android:layout_width="215dp"
            android:layout_height="215dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/verification_email_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textForgotPW" />

        <TextView
            android:id="@+id/textTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Check You'r Email to Verification"
            android:textSize="20dp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotomedium"
            android:text="Send Verification Code Here"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTips" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_biru_muda"
            android:text="LOGIN"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/biruTua"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/send_code"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>