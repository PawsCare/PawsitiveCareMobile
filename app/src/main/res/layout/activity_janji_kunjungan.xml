<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".janjiKunjungan">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_biru_tua"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/panah"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Buat Janji Kunjungan"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subjudul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Klinik Di Sekitarmu"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" />

        <HorizontalScrollView
            android:id="@+id/klinik"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/subjudul1"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/petshop_daengta"
                    app:cardCornerRadius="15dp"
                    android:layout_width="170dp"
                    android:layout_height="185dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/beepet1"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/beepet1"/>
                    <TextView
                        android:id="@+id/titlepet1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bee Pet Mart PetShop Daengta"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginTop="115dp"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textpet1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jl. Daeng Tata Raya 44"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginTop="135dp"
                        android:layout_marginStart="8dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/petshop_makassar"
                    android:layout_width="170dp"
                    android:layout_height="185dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/beepet2"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/beepet2"/>

                    <TextView
                        android:id="@+id/titlepet2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/robotomedium"
                        android:text="Bee Pet Mart PetShop Makassar"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/textpet2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="142dp"
                        android:fontFamily="@font/robotomedium"
                        android:text="Jl. Monumen Emmy Saelan No.103"
                        android:textColor="@color/black"
                        android:textSize="9sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/petshop_amigos"
                    app:cardCornerRadius="15dp"
                    android:layout_width="170dp"
                    android:layout_height="185dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/beepet3"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/amigos"/>

                    <TextView
                        android:id="@+id/titlepet3"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Amigos PetShop Makassar"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginTop="115dp"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textpet3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jl. Landak Lama No.89"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotomedium"
                        android:layout_marginTop="135dp"
                        android:layout_marginStart="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/subjudul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Jelajahi Layanan"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/klinik"
            app:layout_constraintStart_toStartOf="@id/klinik"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/lihat_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filter"
            android:padding="6dp"
            android:layout_marginTop="20dp"
            android:text="Lihat Semua"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/klinik" />

        <ImageView
            android:id="@+id/cekcat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/cekcat"
            app:layout_constraintTop_toBottomOf="@id/subjudul2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textcat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Kucing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/cekcat"
            app:layout_constraintStart_toStartOf="@id/cekcat"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/cekdog"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/cekdog"
            app:layout_constraintTop_toBottomOf="@id/subjudul2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="88dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textdog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Anjing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/cekdog"
            app:layout_constraintStart_toStartOf="@id/cekdog"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"/>


        <ImageView
            android:id="@+id/vaksincat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="88dp"
            android:background="@drawable/vaksincat"
            app:layout_constraintTop_toBottomOf="@id/textcat1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textcat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaksin Kucing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/vaksincat"
            app:layout_constraintStart_toStartOf="@id/vaksincat"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/vaksindog"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="88dp"
            android:background="@drawable/vaksindog"
            app:layout_constraintTop_toBottomOf="@id/textdog1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textdog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaksin Anjing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/vaksindog"
            app:layout_constraintStart_toStartOf="@id/vaksindog"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/rawatcat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="88dp"
            android:background="@drawable/rawatcat"
            app:layout_constraintTop_toBottomOf="@id/textcat2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="160dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textcat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rawat Kucing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/rawatcat"
            app:layout_constraintStart_toStartOf="@id/rawatcat"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/rawatdog"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="88dp"
            android:background="@drawable/rawatdog"
            app:layout_constraintTop_toBottomOf="@id/textdog2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textdog3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rawat Anjing"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/rawatdog"
            app:layout_constraintStart_toStartOf="@id/rawatdog"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
