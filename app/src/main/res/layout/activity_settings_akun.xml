<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsAkun">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_biru_tua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button_account"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/profile_edit_text"
        app:layout_constraintEnd_toEndOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/ic_username"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/account_nav"
        android:backgroundTint="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <TextView
        android:id="@+id/textusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Username"
        android:layout_marginStart="55dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <ImageView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/profile_edit_text"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ic_password"
        android:layout_width="16dp"
        android:layout_height="18dp"
        android:background="@drawable/password_black"
        android:backgroundTint="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toTopOf="@+id/password" />

    <TextView
        android:id="@+id/textpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Password"
        android:layout_marginStart="55dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toTopOf="@+id/password" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintTop_toTopOf="@+id/password" />

    <ImageView
        android:id="@+id/contact_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/profile_edit_text"
        app:layout_constraintEnd_toEndOf="@id/contact_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ic_contact_information"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/contact_information"
        android:backgroundTint="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_information"
        app:layout_constraintStart_toStartOf="@+id/contact_information"
        app:layout_constraintTop_toTopOf="@+id/contact_information" />

    <TextView
        android:id="@+id/textcontact_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Contact Information"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_information"
        app:layout_constraintStart_toEndOf="@+id/ic_contact_information"
        app:layout_constraintTop_toTopOf="@+id/contact_information" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/contact_information"
        app:layout_constraintEnd_toEndOf="@+id/contact_information"
        app:layout_constraintTop_toTopOf="@+id/contact_information" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/contact_information"
        app:layout_constraintEnd_toEndOf="@+id/contact_information"
        app:layout_constraintTop_toTopOf="@+id/contact_information" />


    <ImageView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/profile_edit_text"
        app:layout_constraintEnd_toEndOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_information"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ic_address"
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:background="@drawable/adress_black"
        android:backgroundTint="@color/black"
        android:layout_marginStart="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/address"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toTopOf="@+id/address" />

    <TextView
        android:id="@+id/textaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Address"
        android:layout_marginStart="55dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/address"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toTopOf="@+id/address" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/address"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintTop_toTopOf="@+id/address" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/address"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintTop_toTopOf="@+id/address" />

</androidx.constraintlayout.widget.ConstraintLayout>